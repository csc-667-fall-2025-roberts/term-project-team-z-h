{
  "name": "temp-term-project",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build:backend": "powershell -Command \"if (Test-Path dist) { Remove-Item -Recurse -Force dist }; tsc; Copy-Item -Recurse src/backend/views dist/views\"",
    "build:frontend": "esbuild src/frontend/entrypoint.ts --bundle --outfile=dist/public/js/bundle.js",
    "build": "npm run build:backend && npm run build:frontend",
    "start": "node dist/server.js",
    "dev:frontend": "esbuild src/frontend/entrypoint.ts --bundle --outfile=src/backend/public/js/bundle.js --sourcemap --target=es2020 --watch",
    "dev:backend": "nodemon --exec ts-node src/backend/server.ts",
    "dev:live": "browser-sync start --proxy \"http://localhost:3000\" --files \"src/backend/views/**/*.ejs\" \"src/backend/public/**/*\" --no-ui --no-open --port 3001",
    "start:dev": "concurrently --names \"backend,frontend\" --prefix-colors \"green,blue,magenta\" \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:live\"",
    "migrate:create": "node-pg-migrate create -j ts -- ",
    "migrate:up": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "body-parser": "^2.2.0",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "http-errors": "^2.0.0",
    "morgan": "^1.10.1",
    "node-pg-migrate": "^8.0.3",
    "pg": "^8.16.3",
    "pg-promise": "^12.2.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.7.1",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "browser-sync": "^3.0.4",
    "concurrently": "^9.2.1",
    "cpy": "^12.0.1",
    "esbuild": "^0.25.10",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "**/*": "prettier --write --ignore-unknown"
  }
}
