<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= game.name %> - UNO Game</title>
    <link rel="stylesheet" href="/css/game.css">
    <script src="/js/bundle.js" defer></script>
    <% if (typeof user !== 'undefined') { %>
        <script>
            window.CURRENT_USER = '<%= user.username %>';
            window.GAME_ID = <%= game.id %>;
        </script>
    <% } %>
</head>
<body class="game-page">
    <nav class="game-header">
        <div class="header-left">
            <h1>UNO Game</h1>
            <p class="game-info">Game: <%= game.name %> | Players: <%= players.length %></p>
        </div>
        <div class="header-right">
            <% if (typeof user !== 'undefined') { %>
                <span class="user-info">Welcome, <%= user.username %></span>
                <a href="/lobby" class="btn btn-secondary">Back to Lobby</a>
            <% } %>
        </div>
    </nav>

    <div class="game-container">
        <div class="game-layout">
            <div class="game-board">
                <h2>Game Board</h2>
                
                <div class="opponents">
                    <% players.forEach(player => { %>
                        <% if (player.username !== user.username) { %>
                            <div class="opponent-hand">
                                <span class="player-name"><%= player.username %></span>
                                <div class="card-count">7 cards</div>
                            </div>
                        <% } %>
                    <% }) %>
                    <div class="opponent-hand">
                        <span class="player-name">Player Bot 1</span>
                        <div class="card-count">5 cards</div>
                    </div>
                    <div class="opponent-hand">
                        <span class="player-name">Player Bot 2</span>
                        <div class="card-count">8 cards</div>
                    </div>
                </div>

                <div class="play-area">
                    <div class="deck-pile">
                        <div class="card card-back">DECK</div>
                    </div>
                    <div class="discard-pile">
                        <div class="card card-red">
                            <span class="card-value">5</span>
                        </div>
                    </div>
                </div>

                <div class="player-hand">
                    <h3>Your Hand</h3>
                    <div class="cards-in-hand">
                        <div class="card card-red"><span class="card-value">3</span></div>
                        <div class="card card-blue"><span class="card-value">7</span></div>
                        <div class="card card-green"><span class="card-value">2</span></div>
                        <div class="card card-yellow"><span class="card-value">9</span></div>
                        <div class="card card-red"><span class="card-value">Skip</span></div>
                        <div class="card card-wild"><span class="card-value">Wild</span></div>
                        <div class="card card-blue"><span class="card-value">1</span></div>
                    </div>
                </div>
            </div>

            <div class="game-sidebar">
                <div class="game-chat">
                    <h3>Game Chat</h3>
                    <div class="message-listing"></div>
                    <div class="message-submit">
                        <input type="text" placeholder="Type message..." />
                        <button class="btn btn-send">Send</button>
                    </div>
                </div>

                <div class="game-actions">
                    <button class="btn btn-primary">Draw Card</button>
                    <button class="btn btn-warning">Call UNO!</button>
                </div>
            </div>
        </div>
    </div>

    <template id="template-chat-message">
        <div class="chat-message">
            <span class="message-username"></span>
            <span class="message-time"></span>
            <span class="message-text"></span>
        </div>
    </template>
</body>
</html>